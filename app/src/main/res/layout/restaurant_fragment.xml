<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.aungkhant.DashDining.RestaurantFragment"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/restaurant_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="45dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/bebas_nue"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#273F3D3D"
        android:fontFamily="@font/oswald_medium"
        android:textColor="@color/primary"
        android:textSize="15dp"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/restaurant_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="15dp"/>

    <TextView
        android:id="@+id/restaurant_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_medium"
        android:textSize="20dp"
        android:background="@color/textBackground"
        android:textColor="@color/lightText"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/restaurant_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textBackground"
        android:fontFamily="@font/oswald_medium"
        android:textAlignment="center"
        android:textColor="@color/lightText"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <Button
            android:id="@+id/directions_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/oswald_semibold"
            android:backgroundTint="@color/primary"
            android:text="Get Directions"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/yelp_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/oswald_semibold"
            android:backgroundTint="@color/primary"
            android:text="Yelp Profile"
            android:layout_weight="1"/>

    </LinearLayout>



</LinearLayout>
